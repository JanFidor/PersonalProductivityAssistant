<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/task_row"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:id="@+id/task_row_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Text"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:lines="1" />

    <TextView
        android:id="@+id/progressPercent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/Text"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        />


    <ImageButton
        android:id="@+id/addV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:backgroundTint="@android:color/transparent"
        android:src="@drawable/ic_tasks_plus_24"
        android:paddingVertical="24sp"
       />

    <ImageButton
        android:id="@+id/remV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/addV"
        android:layout_marginLeft="-74dp"
        android:backgroundTint="@android:color/transparent"
        android:src="@drawable/ic_tasks_minus_24"
        android:paddingVertical="24sp"/>

    <ImageView
        android:id="@+id/checkedTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:backgroundTint="@android:color/transparent"
        android:src="@drawable/ic_tasks_checkmark_24"
        android:visibility="invisible"/>


</RelativeLayout>